{
  "name": "LCMC_none",
  "n_gpu": 1,
  "task" : "rgb4depth",
  "arch": {
    "type": "DepthCompletion",
    "args": {
      "in_channels": 1,
      "context":  {
        "type": "laplacian",
        "sigma": 200.0,
        "learnable_sigma": true
      },
      "convolution": {
        "type": "LCMC",
        "scaling": "none"
      },
      "backbone":  {
        "type": "resnet50",
        "dilation": [false, true, true]
      },
      "classifier": {
        "type": "fcn"
      }
    }
  },
  "data_loader": {
    "type": "KittiDataLoader",
    "args": {
      "isval": false,
      "sparsity": 100,
      "crop_width": 1216,
      "crop_height": 352,
      "rotation_max_angle": 5.0,
      "horizontal_flip_p" : 0.5,
      "batch_size": 6,
      "shuffle": true,
      "validation_split": 0,
      "num_workers": 10
    }
  },
  "validation_data_loader": {
    "type": "KittiDataLoader",
    "args": {
      "isval": true,
      "sparsity": 100,
      "crop_width": 1216,
      "crop_height": 352,
      "rotation_max_angle": 0.0,
      "horizontal_flip_p" : 0.0,
      "batch_size": 6,
      "shuffle": false,
      "validation_split": 0,
      "num_workers": 10
    }
  },
    "optimizer": {
      "type": "Adam",
      "args": {
      "lr": 0.005
    }
  },
  "loss": "masked_mse_loss",
  "metrics": [
  "rmse",
  "mae",
  "irmse",
  "imae",
  "SILog"
  ],
  "lr_scheduler": {
    "type": "MultiStepLR",
    "args": {
      "milestones": [30,40,50,60,70],
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 200,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 1,
    "monitor": "min val_rmse",
    "early_stop": 41,
    "tensorboard": false
  },
  "save_image_every_n_epochs" : 10000
}
